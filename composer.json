{
    "require": {
        "slim/slim": "^4.11",
        "monolog/monolog": "^3",
        "php-di/php-di": "^6 || ^7",
        "nyholm/psr7": "^1.4",
        "nyholm/psr7-server": "^1.0",
        "symfony/uid": "^6",
        "fig/http-message-util": "^1.1",
        "selective/basepath": "^2",
        "doctrine/orm": "^2.13",
        "symfony/cache": "^6.2",
        "slim/http": "^0.4.0",
        "symfony/validator": "^6.2",
        "symfony/http-client": "^6.2",
        "bryanjhv/slim-session": "~4.0",
        "firebase/php-jwt": "^6.3",
        "elephantio/elephant.io": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symfony/console": "6.0.*",
        "squizlabs/php_codesniffer": "^3.6",
        "friendsofphp/php-cs-fixer": "^3",
        "phpstan/phpstan": "1.*",
        "selective/test-traits": "^2",
        "mikey179/vfsstream": "^1.6",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "./src/Application/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "cs:check": "php-cs-fixer fix --dry-run --format=txt --verbose --diff --config=.cs.php --ansi",
        "cs:fix": "php-cs-fixer fix --config=.cs.php --ansi",
        "sniffer:check": "phpcs --standard=phpcs.xml",
        "sniffer:fix": "phpcbf --standard=phpcs.xml",
        "stan": "phpstan analyse -c phpstan.neon --no-progress --ansi --xdebug",
        "start": "php -S localhost:8080 -t public/",
        "docker:dev": "docker-compose -f .\\docker\\docker-compose.yml -f .\\docker\\docker-dev.yml up -d",
        "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always",
        "test:all": [
            "@cs:check",
            "@sniffer:check",
            "@stan",
            "@test"
        ],
        "test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover build/logs/clover.xml --coverage-html build/coverage",
        "schema:update": "php .\\bin\\doctrine.php orm:schema-tool:update --force",
        "schema:drop": "php .\\bin\\doctrine.php orm:schema-tool:drop --force"
    }
}
